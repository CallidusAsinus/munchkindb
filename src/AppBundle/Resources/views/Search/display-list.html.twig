{% extends 'AppBundle:Search:display.html.twig' %}

{% block main %}

<table class="rwd-table table table-striped table-condensed">
<thead>
<tr>
<th>Title</th>
<th>Faction</th>
<th>Gold/Rank</th>
<th>Power</th>
<th>Life/Defense</th>
<th>Type</th>
<th>Subtype</th>
<th>Set</th>
</tr>
</thead>
{% for i in 0..cards|length-1 %}
<tr class="{% if i%2==0 %}even{% else %}odd{% endif %}">
   {% set card = cards[i] %}
	<td data-th="Title">
		<a href="{{ card.url }}" class="card{% if card.available == false %} card-preview{% endif %}" data-index="{{ card.code }}">{{ card.title }}</a>
	</td>
        <td data-th="Faction">{{ card.faction_name }}</td>
        <td data-th="Gold/Rank">{% if card.gold %}{{ card.gold }}{% elseif card.rank %}{{ card.rank }}{% endif %}</td>
        <td data-th="Power">{{ card.power }}</td>
        <td data-th="Life/Defense">{% if card.life %}{{ card.life }}{% elseif card.defense %}{{ card.defense }}{% endif %}</td>
	<td data-th="Type" >{{ card.type_name }}</td>
	<td data-th="Subtype">{{ card.subtype }}</td>
	<td data-th="Set"> {{ card.pack_name }} - {{ card.position }}</td>
</tr>
{% endfor %}
</table>

{% endblock %}
